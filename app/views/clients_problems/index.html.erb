<h1>Clients Problems</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Problem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients_problems.each do |clients_problem| %>
      <tr>
        <td><%= clients_problem.client_id %></td>
        <td><%= clients_problem.problem_id %></td>
        <td><%= link_to 'Show', clients_problem %></td>
        <td><%= link_to 'Edit', edit_clients_problem_path(clients_problem) %></td>
        <td><%= link_to 'Destroy', clients_problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

