<p id="alert"><%= alert %></p>

<h1>Login</h1>

<p>Don't have an account? <strong><%= link_to 'Sign up', signup_path %></strong></p>

<%= form_tag sessions_path do |form| %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>

<p><%= link_to 'Forgot password?', new_password_reset_path %></p>
