<h1>Hello, <%= User.find(session['user_id']).name %></h1>

<p>You have registered as a User in our system. Please, share some personal information about you so that we can personalize your onboarding experience</p>

<%= form_for @client do |f| %>
  <% if @client.errors.any? %>
    <div class='error_messages'>
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @client.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <p>Image format should be png, jpg no more than 5 Mb</p>
  </div>

  <div class='field'>
    <%= f.label :age %>
    <%= f.number_field :age, in: 18..99 %>
  </div>

  <div class='field'>
    <%= f.label :gender_id %>
    <%= collection_radio_buttons('client', 'gender_id', Gender.all, :id, :name) %>
  </div>

  <div class='field'>
    <%= f.label :problems %>
    <%= collection_check_boxes('client', 'problems', Problem.all, :id, :name) %>
  </div>

  <div class='actions'>
    <%= f.submit 'Continue' %>
  </div>
<% end %>
