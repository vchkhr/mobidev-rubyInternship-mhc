<%= render 'layouts/navigation/app', user: current_user %>

<p id="alert"><%= alert %></p>
<p id="notice"><%= notice %></p>

<div class="dashboard">

  <div class="left-column">
    <div class="analytics">
      <div class="analytic">
        <p class="title">Total progress</p>

        <div class="number-description">
          <div class="number">
            <p><strong><%= ClientManager::TechniquesCompletedCount.call(@client) %></strong></p>
          </div>

          <div class="description">
            <p class="text-muted font-size-small">techniques<br>completed</p>
          </div>
        </div>
      </div>
      
      <div class="analytic">
        <p class="title">Current progress</p>

        <div class="number-description">
          <div class="number">
            <p><strong><%= ClientManager::TechniquesInProgressCount.call(@client) %></strong></p>
          </div>

          <div class="description">
            <p class="text-muted font-size-small">techniques in<br>process</p>
          </div>
        </div>
      </div>
      
      <div class="analytic">
        <p class="title">Total time</p>

        <div class="number-description">
          <div class="number">
            <p><strong><%= @client.total_time.round(1) %></strong></p>
          </div>

          <div class="description">
            <p class="text-muted font-size-small">hours for<br>techniques</p>
          </div>
        </div>
      </div>
      
      <div class="analytic">
        <p class="title">Current time</p>

        <div class="number-description">
          <div class="number">
            <p><strong><%= ClientManager::HoursInProgress.call(@client).round(1) %></strong></p>
          </div>

          <div class="description">
            <p class="text-muted font-size-small">hours for<br>techniques</p>
          </div>
        </div>
      </div>
    </div>

    <h3 class="mt-3">Techniques</h3>
    
    <div class="techniques">
      <% Technique.where_client(@client).each do |technique| %>
        <%= render 'layouts/techniques/technique', technique: technique, show_continue: false %>
      <% end %>
    </div>

  </div>

  <div class="right-column">

    <div class="client-card">
      <div class="image-info">
        <div class="image">
          <%= image_tag(UserManager::ProfileImage.call(@client.user), size: "50x50", alt: @client.user.name) %>
        </div>

        <div class="info">
          <p>
            <strong><%= @client.user.name %></strong>
          </p>
          
          <p><%= @client.user.email %></p>
          <p><%= @client.age %> years | <%= @client.gender %></p>
        </div>
      </div>

      <p>Problems</p>
      <div class="problems">
        <% @client.problems.each do |problem| %>
          <div class="problem"><%= problem.name %></div>
        <% end %>
      </div>
    </div>

  </div>

</div>

<%= render 'layouts/footer/footer' %>
