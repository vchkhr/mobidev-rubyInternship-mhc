<div class="client-card">
  <div class="image-info">
    <div class="image">
      <%= image_tag(UserManager::ProfileImage.call(user), size: "50x50", alt: user.name) %>
    </div>

    <div class="info">
      <p>
        <strong><%= user.name %> <%= user.is_verified %></strong>
      </p>

      <p>Current Client</p>
      <p><%= user.profile.age %> years | <%= user.profile.gender.name %></p>
    </div>
  </div>

  <p class="mb-0">Problems</p>
  <div class="problems">
    <% user.profile.problems.each do |problem| %>
      <div class="problem"><%= problem.name %></div>
  <% end %>
  </div>

  <p>Techniques in process</p>
  <% if ClientManager::TechniquesInProgressCount.call(user.profile) == 0 %>
    <p>All techniques completed</p>
  <% else %>
    <% ClientManager::TechniquesInProgress.call(user.profile).each do |technique| %>
      <p><strong><%= technique.title %></strong></p>
    <% end %>
  <% end %>

  <div class="link">
    <p><%= link_to 'SEE DETAILS', client_path(user.client) %></p>
  </div>
</div>
